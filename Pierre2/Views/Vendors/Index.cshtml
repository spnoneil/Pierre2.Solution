@using Bakery.Models;

<h1>Who's buyin'?!</h1>

@if (@Model.Count == 0)
{
  <p>You ain't got nobody buyin', yet!</p>
}

@foreach (Vendor vendor in Model)
{
  <p><a href="/vendors/@vendor.Id">@vendor.VendorName</a>: @vendor.VendorDescription</p>
}

<a href="/vendors/new">Go git you some more buyers for buyin'!</a>
<a href="/">Or go home, Pierre!</a>